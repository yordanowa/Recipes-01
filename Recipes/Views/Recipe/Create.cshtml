@model Recipes.Models.RecipeInputModel
<h1>Create recipe</h1>
<hr />
<form method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PreparationTime"></label>
        <input asp-for="PreparationTime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CookingTime"></label>
        <input asp-for="CookingTime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PortionCount"></label>
        <input asp-for="PortionCount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@Model.Categories"></select>
    </div>
    <div class="form-group">
        <label asp-for="Image">Choose a picture: </label>
        <input asp-for="Image" />
    </div>
    <div id="IngredientsContainer">
        <label asp-for="Ingredients"></label>
        <a class="btn btn-success" onclick="AddMoreIngredients()">+</a>
    </div>

    <input type="submit" class="btn btn-primary" />
</form>
@section Scripts {
    <script>
        var ingredientIndex = 0;
        function AddMoreIngredients() {
            $("#IngredientsContainer").
                append("<div>Name: <input type='text' name='Ingredients[" + ingredientIndex + "].Name' /> Quantity: <input type='text' name='Ingredients[" + ingredientIndex + "].Quantity' /></div>");
            ingredientIndex++;
        }
    </script>
}