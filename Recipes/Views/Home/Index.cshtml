@model Recipes.Models.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Recipes</h1>
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                @foreach (var item in Model.RandomRecipes)
                {
                    <div class="card col-md-6">
                        <img class="card-img-top" src="@item.ImageURL" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.CategoryName</p>
                            <a asp-controller="Recipe" asp-action="ById" asp-route-id="@item.Id" class="btn btn-primary">Go to recipe ...</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-4">
            <ul class="list-group">
                <li class="list-group-item bg-info">Recipes: @Model.RecipesCount</li>
                <li class="list-group-item bg-light">Categories: @Model.CategoriesCount</li>
                <li class="list-group-item bg-info">Ingredients: @Model.IngredientsCount</li>
                <li class="list-group-item bg-light">Images: @Model.ImagesCount</li>
            </ul>
        </div>
    </div>

</div>
